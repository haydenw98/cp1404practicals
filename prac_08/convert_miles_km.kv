BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            font_size: 25
            multiline: False
            input_filter: 'float'
            on_text: app.handle_conversion()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

   # Button:
   #     text: 'Convert miles to km'
   #     font_size: 25
   #     on_press: app.handle_conversion()

    Label:
        text: app.output_text
        font_size: 25
        color: (1, 1, 0, 1)